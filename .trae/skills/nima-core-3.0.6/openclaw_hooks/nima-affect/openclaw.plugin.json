{
  "id": "nima-affect",
  "name": "NIMA Dynamic Affect System",
  "description": "Real-time emotion detection and Panksepp affect state management",
  "version": "3.0.6",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "description": "Enable the affect detection system"
      },
      "identity_name": {
        "type": "string",
        "description": "Agent identity name (default: agent)"
      },
      "baseline": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          {
            "type": "object"
          },
          {
            "type": "null"
          }
        ],
        "description": "Baseline affect configuration: archetype name (string), 7D vector (array), or {archetype, modifiers} (object)"
      },
      "skipSubagents": {
        "type": "boolean",
        "description": "Skip subagent sessions (default: true)"
      }
    }
  }
}
